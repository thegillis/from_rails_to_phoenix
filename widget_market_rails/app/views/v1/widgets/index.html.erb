<p id="notice"><%= notice %></p>

<h1>Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price cents</th>
      <th>Upc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.name %></td>
        <td><%= widget.description %></td>
        <td><%= widget.price_cents %></td>
        <td><%= widget.upc %></td>
        <td><%= link_to 'Show', [:v1, widget] %></td>
        <td><%= link_to 'Edit', edit_v1_widget_path(widget) %></td>
        <td><%= link_to 'Destroy', [:v1, widget], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Widget', new_v1_widget_path %>
